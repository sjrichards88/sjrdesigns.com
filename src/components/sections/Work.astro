<script>
  document.addEventListener('DOMContentLoaded', function() {
    const projectItems = document.querySelectorAll('.project-item') as NodeListOf<HTMLElement>;
    const mousePreview = document.getElementById('mouseImagePreview') as HTMLElement;
    const previewImage = document.getElementById('previewImage') as HTMLImageElement;
    let isHovering = false;
    let currentItem: HTMLElement | null = null;

    // Perfect scroll animation system (same as Tech section)
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          element.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('#work .animate-item').forEach(item => {
      observer.observe(item);
    });

    function updateMousePreview(e: MouseEvent, imageSrc: string) {
      if (!isHovering) return;
      
      const mouseX = e.clientX;
      const mouseY = e.clientY;
      const windowWidth = window.innerWidth;
      const windowHeight = window.innerHeight;
      const previewWidth = 320; // 80 * 4 (w-80)
      const previewHeight = 192; // 48 * 4 (h-48)
      
      let x = mouseX + 20;
      let y = mouseY - previewHeight / 2;
      
      // Keep preview within viewport
      if (x + previewWidth > windowWidth) {
        x = mouseX - previewWidth - 20;
      }
      if (y < 20) {
        y = 20;
      }
      if (y + previewHeight > windowHeight - 20) {
        y = windowHeight - previewHeight - 20;
      }
      
      mousePreview.style.left = x + 'px';
      mousePreview.style.top = y + 'px';
    }

    projectItems.forEach(item => {
      const imageUrl = item.dataset.image || '';
      const projectUrl = item.dataset.url || '';

      item.addEventListener('mouseenter', function(e: MouseEvent) {
        isHovering = true;
        currentItem = item;
        previewImage.src = imageUrl;
        mousePreview.style.opacity = '1';
        updateMousePreview(e, imageUrl);
      });

      item.addEventListener('mousemove', function(e: MouseEvent) {
        if (currentItem === item) {
          updateMousePreview(e, imageUrl);
        }
      });

      item.addEventListener('mouseleave', function() {
        if (currentItem === item) {
          isHovering = false;
          currentItem = null;
          mousePreview.style.opacity = '0';
        }
      });

      item.addEventListener('click', function(e: MouseEvent) {
        if (projectUrl) {
          window.open(projectUrl, '_blank', 'noopener,noreferrer');
        }
      });
    });

    // Handle window mouse move for smooth tracking
    document.addEventListener('mousemove', function(e: MouseEvent) {
      if (isHovering && currentItem) {
        updateMousePreview(e, currentItem.dataset.image || '');
      }
    });

    document.addEventListener('mouseleave', function() {
      isHovering = false;
      currentItem = null;
      mousePreview.style.opacity = '0';
    });
  });
</script>

