---
import Button from '@/components/Button.astro';
import logoAbba from '@/assets/images/logo-abba.svg'
import logoBarclays from '@/assets/images/logo-barclays.svg'
import logoBBC from '@/assets/images/logo-bbc.svg'
import logoDisney from '@/assets/images/logo-disney.svg'
import logoUbisoft from '@/assets/images/logo-ubisoft.svg'
---

<section id="about" class="relative py-24 bg-gradient-to-br from-white via-blue-50/30 to-cyan-50/30 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-[0.02] bg-dot-pattern"></div>
  <div class="absolute top-20 right-20 w-72 h-72 bg-gradient-to-br from-blue-200/20 to-teal-200/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 left-20 w-96 h-96 bg-gradient-to-br from-cyan-200/20 to-blue-200/10 rounded-full blur-3xl animate-pulse animate-delay-2s"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-item">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-100 to-cyan-100 border border-blue-200/50 rounded-full mb-6 shadow-sm">
        <div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full animate-pulse"></div>
        <span class="bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent text-sm font-medium">About Me</span>
      </div>
      <h2 class="font-heading font-bold text-neutral-900 mb-6 text-responsive-heading">
        Senior Developer with 
        <span class="bg-gradient-to-r from-blue-600 via-teal-500 to-cyan-500 bg-clip-text text-transparent">Passion</span>
      </h2>
      <p class="text-neutral-600 max-w-4xl mx-auto leading-relaxed text-responsive-subheading">
        Creating exceptional digital experiences that drive real business results for world-class brands across the UK and beyond
      </p>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-3 gap-8 mb-20">
      
      <!-- Main Profile Card -->
      <div class="lg:col-span-2 group animate-item animate-delay-100">
        <div class="h-full p-8 lg:p-10 bg-gradient-to-br from-white via-blue-50/20 to-cyan-50/20 border border-blue-200/30 rounded-3xl hover:shadow-2xl hover:shadow-blue-500/10 transition-all duration-500 backdrop-blur-sm">
          
          <!-- Profile Header -->
          <div class="flex items-start gap-6 mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 via-teal-500 to-cyan-500 rounded-2xl flex items-center justify-center flex-shrink-0 shadow-lg">
              <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-heading font-bold text-neutral-900 mb-2 text-responsive-name">Simon Richards</h3>
              <p class="bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent font-semibold mb-3 text-responsive-title">Senior Full-Stack Developer</p>
              <div class="flex items-center gap-2 text-neutral-500">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-sm">London & Basingstoke, UK</span>
              </div>
            </div>
          </div>
          
          <!-- Description -->
          <div class="space-y-6">
            <p class="text-neutral-700 leading-relaxed">
              I'm a senior full-stack developer with over <span class="font-semibold text-neutral-900">8 years of experience</span> crafting high-performance web solutions for world-class brands. My expertise spans the complete development lifecycle, from initial concept and design to deployment and ongoing optimization.
            </p>
            
            <p class="text-neutral-700 leading-relaxed">
              Currently working as a Senior Web Developer at 
              <a href="https://www.dewynters.com" target="_blank" rel="noreferrer" class="bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent hover:from-blue-700 hover:to-cyan-700 font-semibold underline decoration-blue-200 hover:decoration-blue-300 transition-colors">
                Dewynters
              </a>, I've had the privilege of building exceptional digital experiences for industry leaders including Disney, BBC, Barclays, and Ubisoft. I specialize in React, Next.js, and modern web technologies that deliver measurable business results.
            </p>
          </div>
        </div>
      </div>
      
      <!-- Availability Card -->
      <div class="group animate-item animate-delay-200">
        <div class="h-full p-8 bg-gradient-to-br from-emerald-50 via-emerald-100/30 to-green-50 border border-emerald-300/40 rounded-3xl hover:shadow-2xl hover:shadow-emerald-500/20 transition-all duration-500 backdrop-blur-sm">
          
          <!-- Status Badge -->
          <div class="flex items-center gap-3 mb-6">
            <div class="w-3 h-3 bg-emerald-500 rounded-full animate-pulse shadow-lg shadow-emerald-500/50"></div>
            <span class="text-emerald-700 font-semibold">Available for New Projects</span>
          </div>
          
          <h3 class="font-heading font-bold text-neutral-900 mb-4 text-responsive-card-title">
            Ready to Start Your Project?
          </h3>
          
          <div class="space-y-4 mb-8">
            <p class="text-neutral-700 text-sm leading-relaxed">
              I'm passionate about helping businesses transform their digital presence with cutting-edge web development and expert technical guidance that drives real growth.
            </p>
            
            <p class="text-neutral-700 text-sm leading-relaxed">
              Whether you need a complete website rebuild, custom web application, performance optimization, or ongoing technical support, I deliver solutions that exceed expectations and drive measurable results.
            </p>
          </div>
          
          <Button href="#contact" variant="primary" size="md" icon="arrow" class="w-full justify-center">
            Let's Discuss Your Project
          </Button>
        </div>
      </div>
    </div>

    <!-- Companies Section -->
    <div class="text-center animate-item animate-delay-300">
      <h3 class="font-heading font-bold text-neutral-900 mb-12 text-responsive-section-title">
        Trusted by world-class brands
      </h3>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 items-center">
        <div class="flex justify-center items-center p-6 bg-white/80 border border-blue-200/30 rounded-2xl hover:shadow-lg hover:shadow-blue-500/10 transition-all duration-300 group backdrop-blur-sm">
          <img 
            src={logoAbba.src} 
            alt="ABBA" 
            class="max-h-8 w-auto opacity-60 group-hover:opacity-100 transition-opacity duration-300 filter grayscale group-hover:grayscale-0"
          />
        </div>
        
        <div class="flex justify-center items-center p-6 bg-white/80 border border-cyan-200/30 rounded-2xl hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300 group backdrop-blur-sm">
          <img 
            src={logoBarclays.src} 
            alt="Barclays" 
            class="max-h-8 w-auto opacity-60 group-hover:opacity-100 transition-opacity duration-300 filter grayscale group-hover:grayscale-0"
          />
        </div>
        
        <div class="flex justify-center items-center p-6 bg-white/80 border border-teal-200/30 rounded-2xl hover:shadow-lg hover:shadow-teal-500/10 transition-all duration-300 group backdrop-blur-sm">
          <img 
            src={logoBBC.src} 
            alt="BBC" 
            class="max-h-8 w-auto opacity-60 group-hover:opacity-100 transition-opacity duration-300 filter grayscale group-hover:grayscale-0"
          />
        </div>
        
        <div class="flex justify-center items-center p-6 bg-white/80 border border-blue-200/30 rounded-2xl hover:shadow-lg hover:shadow-blue-500/10 transition-all duration-300 group backdrop-blur-sm">
          <img 
            src={logoDisney.src} 
            alt="Disney" 
            class="max-h-8 w-auto opacity-60 group-hover:opacity-100 transition-opacity duration-300 filter grayscale group-hover:grayscale-0"
          />
        </div>
        
        <div class="flex justify-center items-center p-6 bg-white/80 border border-cyan-200/30 rounded-2xl hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300 group col-span-2 md:col-span-1 backdrop-blur-sm">
          <img 
            src={logoUbisoft.src} 
            alt="Ubisoft" 
            class="max-h-8 w-auto opacity-60 group-hover:opacity-100 transition-opacity duration-300 filter grayscale group-hover:grayscale-0"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Perfect scroll animation system (same as Tech section)
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const element = entry.target as HTMLElement;
        element.classList.add('visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('#about .animate-item').forEach(item => {
    observer.observe(item);
  });
</script>

<style>
  /* Background pattern */
  .bg-dot-pattern {
    background-image: radial-gradient(circle at 1px 1px, #000 1px, transparent 0);
    background-size: 40px 40px;
  }

  /* Animation delays */
  .animate-delay-2s {
    animation-delay: 2s;
  }
  
  .animate-delay-100 {
    transition-delay: 0.1s;
  }
  
  .animate-delay-200 {
    transition-delay: 0.2s;
  }
  
  .animate-delay-300 {
    transition-delay: 0.3s;
  }

  /* Responsive typography */
  .text-responsive-heading {
    font-size: clamp(2rem, 6vw, 4rem);
  }
  
  .text-responsive-subheading {
    font-size: clamp(1rem, 2vw, 1.25rem);
  }
  
  .text-responsive-name {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
  }
  
  .text-responsive-title {
    font-size: clamp(1rem, 2vw, 1.125rem);
  }
  
  .text-responsive-card-title {
    font-size: clamp(1.125rem, 2.5vw, 1.25rem);
  }
  
  .text-responsive-section-title {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
  }

  /* Perfect animation system from Tech section */
  .animate-item {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .animate-item.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>