</section>

<style>
  /* Hero responsive typography */
  .text-hero-name {
    font-size: clamp(2rem, 8vw, 4.5rem);
  }
  
  .text-hero-title {
    font-size: clamp(1.25rem, 5vw, 3.5rem);
  }
  
  .text-hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.5rem);
  }
  
  .text-hero-stat {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
  }

  /* Animation delays */
  .fade-in-delay-200 {
    animation-delay: 0.2s;
  }
  
  .fade-in-delay-400 {
    animation-delay: 0.4s;
  }
  
  .fade-in-delay-600 {
    animation-delay: 0.6s;
  }
  
  .fade-in-delay-800 {
    animation-delay: 0.8s;
  }
  
  .fade-in-delay-1000 {
    animation-delay: 1s;
  }
  
  .fade-in-delay-1200 {
    animation-delay: 1.2s;
  }
  
  .fade-in-delay-1400 {
    animation-delay: 1.4s;
  }

  /*  Performance-optimized glow effects */
  .glow-text {
    text-shadow: 0 0 20px rgba(59, 130, 246, 0.3), 0 0 40px rgba(34, 211, 238, 0.2);
  }

  .glow-text-subtle {
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.2), 0 0 20px rgba(34, 211, 238, 0.1);
    transition: text-shadow 0.3s ease;
  }

  .glow-text-subtle:hover {
    text-shadow: 0 0 15px rgba(59, 130, 246, 0.4), 0 0 30px rgba(34, 211, 238, 0.2);
  }

  /* Optimized animations with GPU acceleration */
  @keyframes mega-float {
    0%, 100% {
      transform: translate3d(0px, 0px, 0) scale(1);
    }
    25% {
      transform: translate3d(50px, -80px, 0) scale(1.05);
    }
    50% {
      transform: translate3d(-25px, -40px, 0) scale(0.95);
    }
    75% {
      transform: translate3d(35px, -60px, 0) scale(1.02);
    }
  }

  @keyframes mega-spiral {
    0%, 100% {
      transform: translate3d(0px, 0px, 0);
    }
    25% {
      transform: translate3d(0px, -50px, 0);
    }
    50% {
      transform: translate3d(0px, -25px, 0);
    }
    75% {
      transform: translate3d(0px, -75px, 0);
    }
  }

  @keyframes mega-pulse {
    0%, 100% {
      transform: translate3d(-50%, -50%, 0) scale(1);
      opacity: 0.1;
    }
    50% {
      transform: translate3d(-50%, -50%, 0) scale(1.1);
      opacity: 0.2;
    }
  }

  @keyframes mega-spin {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes mega-bounce {
    0%, 100% {
      transform: translate3d(0px, 0px, 0) scale(1);
    }
    50% {
      transform: translate3d(0px, -20px, 0) scale(1.05);
    }
  }

  @keyframes mega-rotate {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.08);
    }
  }

  @keyframes mega-twinkle {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.3);
    }
  }

  @keyframes mega-twinkle-fast {
    0%, 100% {
      opacity: 0.2;
      transform: scale(0.8);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.1);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Optimized animation classes with better performance */
  .animate-mega-float {
    animation: mega-float 25s ease-in-out infinite;
    will-change: transform;
  }

  .animate-mega-spiral {
    animation: mega-spiral 35s linear infinite;
    will-change: transform;
  }

  .animate-mega-pulse {
    animation: mega-pulse 20s ease-in-out infinite;
    will-change: transform, opacity;
  }

  .animate-mega-spin {
    animation: mega-spin 30s ease-in-out infinite;
    will-change: transform;
  }

  .animate-mega-bounce {
    animation: mega-bounce 8s ease-in-out infinite;
    will-change: transform;
  }

  .animate-mega-rotate {
    animation: mega-rotate 35s ease-in-out infinite;
    will-change: transform;
  }

  .animate-mega-twinkle {
    animation: mega-twinkle 4s ease-in-out infinite;
    will-change: opacity, transform;
  }

  .animate-mega-twinkle-fast {
    animation: mega-twinkle-fast 3s ease-in-out infinite;
    will-change: opacity, transform;
  }

  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out forwards;
  }
  
  /* Fixed animation flash - proper initial state */
  .fade-in-element {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }
  
  .fade-in-element.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    /* Slower animations on mobile for better performance */
    .animate-mega-float {
      animation-duration: 45s;
    }
    
    .animate-mega-spiral {
      animation-duration: 60s;
    }
    
    .animate-mega-pulse {
      animation-duration: 35s;
    }
    
    .animate-mega-spin {
      animation-duration: 50s;
    }
    
    .animate-mega-bounce {
      animation-duration: 15s;
    }
    
    .animate-mega-rotate {
      animation-duration: 60s;
    }
    
    .animate-mega-twinkle {
      animation-duration: 6s;
    }
    
    .animate-mega-twinkle-fast {
      animation-duration: 5s;
    }
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .animate-mega-float,
    .animate-mega-spiral,
    .animate-mega-pulse,
    .animate-mega-spin,
    .animate-mega-bounce,
    .animate-mega-rotate,
    .animate-mega-twinkle,
    .animate-mega-twinkle-fast {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      opacity: 0.5;
    }
  }
</style>

<script>
  // Performance-optimized animations
  document.addEventListener('DOMContentLoaded', function() {
    // Optimized fade-in animation system
    const animatedElements = document.querySelectorAll('.fade-in-element');
    
    // Use RAF for better performance
    const animateElements = () => {
      animatedElements.forEach((element, index) => {
        const delay = element.getAttribute('style')?.match(/animation-delay:\s*([\d.]+)s/);
        const animationDelay = delay ? parseFloat(delay[1]) * 1000 : index * 200;
        
        setTimeout(() => {
          requestAnimationFrame(() => {
            (element as HTMLElement).classList.add('animate-in');
          });
        }, animationDelay);
      });
    };

    // Start animations
    animateElements();

    // Optimized smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Passive scroll listener for better performance
    let ticking = false;
    let lastScrollY = 0;
    
    const handleScroll = () => {
      lastScrollY = window.pageYOffset;
      
      if (!ticking) {
        requestAnimationFrame(() => {
          // Only apply parallax effect if user hasn't scrolled past the landing section
          if (lastScrollY < window.innerHeight) {
            const rate = lastScrollY * -0.05; // Reduced parallax intensity
            const orbs = document.querySelectorAll('#landing .animate-mega-float, #landing .animate-mega-spiral');
            
            orbs.forEach((orb, index) => {
              const element = orb as HTMLElement;
              const speed = (index + 1) * 0.02; // Reduced parallax speed
              element.style.transform = `translate3d(0, ${rate * speed}px, 0)`;
            });
          }
          
          ticking = false;
        });
        ticking = true;
      }
    };

    // Use passive listener for better scroll performance
    window.addEventListener('scroll', handleScroll, { passive: true });

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      window.removeEventListener('scroll', handleScroll);
    });
  });
</script>