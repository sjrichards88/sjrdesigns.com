  </div>

  <!-- Enhanced Scroll Indicator -->
  <div class="absolute bottom-4 sm:bottom-8 left-0 right-0 z-50 fade-in-element fade-in-delay-1400 flex justify-center">
    <div class="flex flex-col items-center text-neutral-400 group hover:text-blue-400 transition-colors duration-300">
      <span class="text-xs uppercase tracking-wider mb-2">Scroll</span>
      <div class="w-px h-6 sm:h-8 bg-gradient-to-b from-white/30 to-transparent animate-bounce"></div>
    </div>
