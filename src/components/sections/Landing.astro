<script>
  // Enhanced animations with intersection observer
  document.addEventListener('DOMContentLoaded', function() {
    // Fixed animation system - no more flash
    const animatedElements = document.querySelectorAll('.fade-in-element');
    
    // Use setTimeout with proper staggered delays
    animatedElements.forEach((element, index) => {
      const delay = element.getAttribute('style')?.match(/animation-delay:\s*([\d.]+)s/);
      const animationDelay = delay ? parseFloat(delay[1]) * 1000 : index * 200;
      
      setTimeout(() => {
        (element as HTMLElement).classList.add('animate-in');
      }, animationDelay);
    });

    // Keep legacy support for old animate-fade-in-up elements
    const legacyElements = document.querySelectorAll('.animate-fade-in-up');
    legacyElements.forEach((element, index) => {
      setTimeout(() => {
        (element as HTMLElement).style.opacity = '1';
        (element as HTMLElement).style.transform = 'translateY(0)';
      }, index * 200);
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Enhanced parallax effect
    let ticking = false;
    
    function updateParallax() {
      const scrolled = window.pageYOffset;
      const rate = scrolled * -0.12;
      
      const orbs = document.querySelectorAll('.absolute.top-0, .absolute.top-1\\/4, .absolute.bottom-0, .absolute.bottom-1\\/4');
      orbs.forEach((orb, index) => {
        const element = orb as HTMLElement;
        const speed = (index + 1) * 0.04;
        element.style.transform = `translateY(${rate * speed}px) translateX(${Math.sin(scrolled * 0.001) * 8}px)`;
      });
      
      ticking = false;
    }

    function requestTick() {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }

    window.addEventListener('scroll', requestTick);
  });
