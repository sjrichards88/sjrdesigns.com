---
import Header from "@/components/Header"
import Footer from "@/components/Footer.astro"

export interface Props {
	title: string;
	description?: string;
	schema?: any;
	breadcrumbs?: Array<{name: string; url: string}>;
}

const { 
	title, 
	description = "Senior freelance web developer Simon Richards - Available for new projects. 8+ years experience building high-performance websites for Disney, BBC & Barclays. Fast, secure, SEO-optimized web solutions that drive results.",
	schema,
	breadcrumbs
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="freelance web developer London, senior full stack developer, custom web development, React developer for hire, Next.js developer, performance optimization, SEO web developer, Basingstoke web design, premium website development, web application development" />
		<meta name="author" content="Simon Richards" />
		<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
		<meta name="googlebot" content="index, follow" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Performance Optimizations -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Lato:wght@400;700&display=swap" rel="stylesheet"/>
		<link rel="dns-prefetch" href="//www.google-analytics.com" />
		
		<!-- Favicons -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#000000" />
		<meta name="msapplication-TileColor" content="#000000" />
		<meta name="theme-color" content="#ffffff" />
		
		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://sjrdesigns.com/android-chrome-384x384.png" />
		<meta property="og:image:width" content="384" />
		<meta property="og:image:height" content="384" />
		<meta property="og:image:alt" content="Simon Richards - Senior Web Developer" />
		<meta property="og:site_name" content="SJR Designs" />
		<meta property="og:locale" content="en_GB" />
		
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="https://sjrdesigns.com/android-chrome-384x384.png" />
		<meta property="twitter:image:alt" content="Simon Richards - Senior Web Developer" />
		
		<!-- Additional SEO Meta Tags -->
		<meta name="geo.region" content="GB-HAM" />
		<meta name="geo.placename" content="Hampshire, London" />
		<meta name="geo.position" content="51.2663;-1.0974" />
		<meta name="ICBM" content="51.2663, -1.0974" />
		
		<!-- Search Console Verification -->
		<meta name="google-site-verification" content="8pUgVl34mzJdzrW7d4EivXrpFyEhgGdrfWfIl4c2bNo" />
		
		<!-- Enhanced Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Simon Richards",
				"jobTitle": "Senior Full-Stack Web Developer",
				"description": "Freelance web developer with 8+ years experience building premium websites and web applications for major brands including Disney, BBC, and Barclays.",
				"url": "https://sjrdesigns.com",
				"image": "https://sjrdesigns.com/android-chrome-384x384.png",
				"telephone": "+447850944628",
				"email": "sjrichards88@gmail.com",
				"sameAs": [
					"https://www.linkedin.com/in/simon-richards-33874699/"
				],
				"worksFor": {
					"@type": "Organization",
					"name": "Dewynters",
					"url": "https://www.dewynters.com"
				},
				"owns": {
					"@type": "Organization",
					"name": "SJR Designs",
					"url": "https://sjrdesigns.com",
					"logo": "https://sjrdesigns.com/android-chrome-384x384.png",
					"description": "Premium web development services specializing in high-performance websites and web applications",
					"foundingDate": "2016",
					"serviceArea": {
						"@type": "Country",
						"name": "United Kingdom"
					},
					"areaServed": ["GB", "US", "EU"],
					"contactPoint": {
						"@type": "ContactPoint",
						"telephone": "+447850944628",
						"email": "sjrichards88@gmail.com",
						"contactType": "customer service",
						"areaServed": "GB",
						"availableLanguage": "English",
						"hoursAvailable": "Mo-Fr 09:00-18:00"
					}
				},
				"address": {
					"@type": "PostalAddress",
					"addressRegion": "Hampshire",
					"addressCountry": "GB",
					"addressLocality": "Basingstoke"
				},
				"knowsAbout": [
					"Web Development",
					"React.js",
					"Next.js",
					"JavaScript",
					"TypeScript",
					"Frontend Development",
					"Full Stack Development",
					"Performance Optimization",
					"SEO",
					"Astro",
					"Tailwind CSS",
					"Node.js"
				],
				"offers": {
					"@type": "Service",
					"name": "Web Development Services",
					"description": "Custom web development, performance optimization, and ongoing maintenance",
					"provider": {
						"@type": "Person",
						"name": "Simon Richards"
					},
					"areaServed": "GB",
					"hasOfferCatalog": {
						"@type": "OfferCatalog",
						"name": "Web Development Services",
						"itemListElement": [
							{
								"@type": "Offer",
								"itemOffered": {
									"@type": "Service",
									"name": "Custom Web Development",
									"description": "High-performance websites and web applications using modern technologies"
								}
							},
							{
								"@type": "Offer",
								"itemOffered": {
									"@type": "Service",
									"name": "Performance Optimization",
									"description": "Website speed optimization and performance improvements"
								}
							},
							{
								"@type": "Offer",
								"itemOffered": {
									"@type": "Service",
									"name": "Ongoing Support",
									"description": "Website maintenance, updates, and technical support"
								}
							}
						]
					}
				}
			}
		</script>

		<!-- Breadcrumb Schema (if provided) -->
		{breadcrumbs && breadcrumbs.length > 0 && (
			<script type="application/ld+json">
				{
					"@context": "https://schema.org",
					"@type": "BreadcrumbList",
					"itemListElement": breadcrumbs.map((crumb, index) => ({
						"@type": "ListItem",
						"position": index + 1,
						"name": crumb.name,
						"item": crumb.url
					}))
				}
			</script>
		)}

		<!-- Additional Page-Specific Schema -->
		{schema && (
			<script type="application/ld+json" set:html={JSON.stringify(schema)} />
		)}

		<!-- FAQ Schema for Homepage -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "FAQPage",
				"mainEntity": [
					{
						"@type": "Question",
						"name": "What services does Simon Richards offer?",
						"acceptedAnswer": {
							"@type": "Answer",
							"text": "Simon Richards offers custom web development, performance optimization, CMS solutions (WordPress, headless CMS), ongoing website maintenance, and technical consulting. Specializing in React, Next.js, Astro, and modern web technologies."
						}
					},
					{
						"@type": "Question",
						"name": "What is the minimum contract term for website packages?",
						"acceptedAnswer": {
							"@type": "Answer",
							"text": "New projects have a minimum term of 12 months. After the initial term, you can cancel anytime with appropriate notice."
						}
					},
					{
						"@type": "Question",
						"name": "What technologies does Simon Richards work with?",
						"acceptedAnswer": {
							"@type": "Answer",
							"text": "Primary technologies include React, Next.js, Astro, TypeScript, Tailwind CSS, Node.js, PHP, GraphQL, MySQL, WordPress, and modern deployment platforms like AWS and Cloudflare."
						}
					},
					{
						"@type": "Question",
						"name": "Does the website package include hosting?",
						"acceptedAnswer": {
							"@type": "Answer",
							"text": "Yes, all website packages include hosting, SSL certificates, regular security updates, and performance monitoring."
						}
					}
				]
			}
		</script>
		
		<!-- Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-5X15WHBMFB"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-5X15WHBMFB', {
				page_title: document.title,
				page_location: window.location.href,
				send_page_view: true
			});
		</script>
	</head>
	<body>
		<Header client:load />
		<slot />
		<Footer />
	</body>
</html>